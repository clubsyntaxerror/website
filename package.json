{
    "workspaces": [
        "database",
        "mobile",
        "trpc",
        "website"
    ],
    "devDependencies": {
        "prettier": "^3.4.2",
        "dotenv-cli": "^8.0.0"
    },
    "scripts": {
        "dev:website": "dotenv -e .env -- npm run --workspace=website dev",
        "dev:mobile": "dotenv -e .env -- npm run --workspace=mobile start",
        "format": "prettier --check .",
        "format:fix": "prettier --write .",
        "expo": "npm run --workspace=mobile expo",
        "db:generate-migrations": "dotenv -e .env -- npm run --workspace=database db:generate-migrations --",
        "db:migrate": "dotenv -e .env -- npm run --workspace=database db:migrate --"
    }
}
