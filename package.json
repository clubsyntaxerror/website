{
    "workspaces": [
        "database",
        "mobile",
        "trpc",
        "website"
    ],
    "devDependencies": {
        "foreman": "^3.0.1",
        "prettier": "^3.4.2"
    },
    "scripts": {
        "dev": "foreman start -f Procfile.dev",
        "format": "prettier --check .",
        "format:fix": "prettier --write .",
        "expo": "npm run --workspace=mobile expo",
        "db:generate-migrations": "npm run --workspace=database db:generate-migrations",
        "db:migrate": "npm run --workspace=database db:migrate"
    }
}
